{% extends "FOSUserBundle::layout.html.twig" %}
{% set title = "Login" %}
{% block content %}
    {% block fos_user_content %}

        <form action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">
        <div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                        <h1 class="text-center">Login</h1>
                    </div>
                    <div class="modal-body">
                        <form class="form col-md-12 center-block">
                            <div class="form-group">
                                <input type="text" id="username" class="form-control input-lg" name="_username" value="{{ last_username }}" placeholder="Benutzername">
                            </div>
                            <div class="form-group">
                                <input type="password" id="password" class="form-control input-lg" name="_password" placeholder="Passwort">
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Anmelden" class="btn btn-primary btn-lg btn-block">
                                <span class="pull-right"><a href="#">Registrieren</a></span>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <div class="col-md-12">
                            <a href="{{ path("startseite") }}" class="btn" data-dismiss="modal" aria-hidden="true">Abbrechen</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
            {% if error %}
                <div>Benutzer / Passwort Kombination unbekannt</div>
            {% endif %}
        </form>

    {% endblock %}
{% endblock %}